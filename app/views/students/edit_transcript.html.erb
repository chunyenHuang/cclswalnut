<meta name="viewport" content="width=device-width, initial-scale=1" />
<%= bootstrap_form_for(@student) do |f| %>

<div class="not-display"><%= f.select(:user_name, [[current_user.name , current_user.name ]]) %></div>
<div class="container">    
  <div class="row">
    <div class="col-sm-3">
      <%= image_tag(@student.picture1_url(:thumb) ,height: "120px") if @student.picture1.present? %>
      <%= @student.name_chinese %>  
      <%= @student.firstname %> 
      <%= @student.lastname %> 
    </div>  
    <div class="col-sm-3">
  </div>

  <div class="row">
    <div class="col-sm-12">
      <p><b>Class Info</b>
    </div>
  </div>
  <div class="row">
    <%= f.fields_for :classinfos, @find_classinfo do |builder| %>
  		<div class="not-display">
      	<%= builder.text_field :id %>
        <%= builder.text_field :classlist_id %>
      </div>
      <div class="col-sm-1">
  			<%= builder.text_field :quiz1 %>
      </div>
      <div class="col-sm-1">
    		<%= builder.text_field :quiz2 %>
      </div>
      <div class="col-sm-1">
    		<%= builder.text_field :quiz3 %>
      </div>
      <div class="col-sm-1">
    		<%= builder.text_field :quiz4 %>
      </div>
      <div class="col-sm-1">
        <%= builder.text_field :quiz5 %>
      </div>
      <div class="col-sm-1">
     		<%= builder.text_field :midterm %>
      </div>
      <div class="col-sm-1">
    		<%= builder.text_field :final %>
      </div>

    <% end %>
  </div>
</div>
<div class="container">
  <div class="actions">
      <center><div class="actions"><%= f.submit %></div>
  </div>
</div>
  
<% end %>



