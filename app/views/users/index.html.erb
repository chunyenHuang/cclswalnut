<%= render 'view_in_table' %>
                        <!-- /.panel-heading -->
<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-users">
            <thead>
                <tr>
					<th>
		              <b>Picture
		            </th>
					<th>
		              <b><%= sortable "name", "姓名" %>
		            </th>
					<th>
		              <b><%= sortable "firstname", "Firstname" %>
		            </th>
					<th>
		              <b><%= sortable "lastname", "Lastname" %>
		            </th>
		            <th>
		              <b><%= sortable "phone1", "Phone#" %>
		            </th>
		            <th>
		              <b><%= sortable "email", "Email" %>
		            </th>
					<th>
		              <b><%= sortable "identity", "Identity" %>
		            </th>
					<th>
		              <b><%= sortable "position", "Position" %>
		            </th>
					<th>
		              <b><%= sortable "id", "ID" %>
		            </th>
					<th>
		              <b><%= sortable "Roles", "Roles" %>
		            </th>
					<th>
		            </th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
		            <tr>
		              <td>
		                <% if user.pic1.present?%>
		                  <%= link_to(image_tag(user.pic1_url(:thumb), :height => "75", :border => 0), user )%>
		                <%end%>
		              </td>
		              <td>
		                <%= user.name %>
		              </td>

		              <td>
		                <%= user.firstname %>
		              </td>
		              <td>
		                <%= user.lastname %>
		              </td>
		              <td>
		                <%= user.phone_mobile %>
		              </td>
		              <td>
		                <%= user.email %>
		              </td>
		              <td>
		                <%= user.identity %>
		              </td>
		              <td>
		                <% if user.position.present? %>
		                  <%= user.position %>
		                <%else%>
		                   <% user.classlists.in_groups_of(3) do |group| %>
		                    <% group.compact.each do |classlist| %>
		                      <%= classlist.year%> <%= classlist.class_name%>
		                    <%end%>
		                  <%end%>
		                <%end%>
		              </td>
		              <td>
		                <%= user.id %>
		              </td>
		              <td>
		                <%= user.roles.first.name %>
		              </td>
		              <td>
		                <%= link_to 'Detail', user %> | 
		                <%= link_to 'Edit', :controller => 'users', :action => 'editbyadmin', :id => user.id %>
		                
		              </td>
		            </tr>
		        <%end%>
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
    
</div>
<!-- /.panel-body -->


    <script>
    $(document).ready(function() {
        $('#dataTables-users').DataTable({
                responsive: true
        });
    });
    </script>